<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Microposts</strong>

  <table border="1">
    <thead>
      <tr>
        <th>ID</th>
        <th>Content</th>
      </tr>
    </thead>
    <% @user.microposts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.content %></td>
      </tr>
    <% end %>

  </table>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
